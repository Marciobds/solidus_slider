<h1><%= t(:slide) %></h1>
<%= render partial: 'spree/admin/shared/configuration_menu' %>

<h1><%= I18n.t(:slide, scope: :spree) %></h1>

<table class="table">
  <tr data-hook="product_id">
    <th><%= I18n.t(:product, scope: :spree) %></th>
    <td>
      <%= @slide.product.name unless @slide.product_id.blank? %>
    </td>
  </tr>
  <tr data-hook="name">
    <th><%= I18n.t(:name, scope: :spree) %></th>
    <td>
      <%= @slide.name %>
    </td>
  </tr>
  <tr data-hook="body">
    <th><%= I18n.t(:body, scope: :spree) %></th>
    <td>
      <%= @slide.body %>
    </td>
  </tr>
  <tr data-hook="link_url">
    <th><%= I18n.t(:link_url, scope: :spree) %></th>
    <td>
      <%= @slide.link_url %>
    </td>
  </tr>
  <tr data-hook="published">
    <th><%= I18n.t(:published, scope: :spree) %></th>
    <td>
      <%= @slide.published ? I18n.t(:y, scope: :spree) : I18n.t(:n, scope: :spree) %>
    </td>
  </tr>
  <tr data-hook="image_file_name">
    <th><%= I18n.t(:image_file_name, scope: :spree) %></th>
    <td>
      <%= @slide.image_file_name %>
    </td>
  </tr>
  <tr data-hook="position">
    <th><%= I18n.t(:position, scope: :spree) %></th>
    <td>
      <%= @slide.position %>
    </td>
  </tr>
</table>

<p>
  <%= link_to_edit @slide, class: 'edit_slide' %> <%= I18n.t(:or, scope: :spree) %>
  <%= link_to I18n.t(:back, scope: :spree), collection_url %>
</p>
